<div class="container">
  <div class="row m-5">
    <h4><i class="fas fa-heart color_red"></i> ジャンル編集</h4>
  </div>
  <div class="row m-5">
      <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <table>
          <tr>
            <th class="px-4"><%= f.label :ジャンル %></th>
            <td class="px-4"><%= f.text_field :name %></td>
            <td class="px-4"><%= f.submit '変更を保存', class: 'btn btn-info' %></td>
          </tr>
        </table>
      <% end %>
  </div>
</div>