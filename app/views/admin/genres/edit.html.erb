<div class="container pt-5 pb-5">
  <div class="row">
    <!--左側のページ-->
    <div class="col-md-2">
      <button type="button" class="btn btn-success rounded-circle p-0 top-btn", style="width:10rem;height:10rem;">
        <h2>Edit</h2>
      </button>
    </div>
    <!--右側のページ-->
    <div class="col-md-9 offset-md-1 py-4">
       <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
        <table>
          <tr>
            <th class="pt-4"><%= f.label :ジャンル変更 %></th>
          </tr>
          <tr>
            <td class="py-2"><%= f.text_field :name %></td>
          </tr>
          <tr>
            <td class="pt-2 pb-4"><%= f.submit '変更を保存', class: 'btn btn-info' %></td>
          </tr>
        </table>
      <% end %>
      <div class="mt-3">
         <%= link_to 'Back', :back %>
      </div>
    </div>
  </div>
</div>