<div class="container py-5">
  <div class="row-md-12">
    <h4>ユーザー一覧</h4>
    <table>
      <tr>
        <th>登録日</th>
        <th>ユーザー名</th>
        <th>ステータス</th>
        <th>詳細ページ</th>
      </tr>
      <% @users.each do |user| %>
      <tr>
        <th><%= user.created_at.strftime('%Y/%m/%d') %></th>
        <th><%= user.name %></th>
        <th>
          <% if user.is_deleted == false %>
          <span>有効</span>
          <% else %>
          <span>退会</span>
          <% end %></th>
        <th><%= link_to "詳細", edit_admin_user_path(user.id) %></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>