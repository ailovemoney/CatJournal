<div class="container pt-5 pb-5">
  <div class="row">
    <!--左側のページ-->
    <div class="col-md-2">
      <button type="button" class="btn btn-info rounded-circle p-0 top-btn", style="width:10rem;height:10rem;">
        <h2>Usres</h2>
      </button>
    </div>
    <!--右側のページ-->
    <div class="col-md-9 offset-md-1 py-4">
      <table class="table">
        <tr>
          <th>登録日</th>
          <th>ユーザー名</th>
          <th>ステータス</th>
          <th>編集ページ</th>
        </tr>
        <% @users.each do |user| %>
        <tr>
          <th><%= user.created_at.strftime('%Y/%m/%d') %></th>
          <th><%= user.name %></th>
          <th>
            <% if user.is_deleted == false %>
            <span class="status-validity">有効</span>
            <% else %>
            <span class="status-invalid">退会</span>
            <% end %></th>
          <th><%= link_to "詳細", edit_admin_user_path(user.id), class: "text-decoration-none text-info font-weight-bold" %></th>
        </tr>
        <% end %>
      </table>
      <div>
        <%= paginate @users %>
      </div>
    </div>
  </div>
</div>
