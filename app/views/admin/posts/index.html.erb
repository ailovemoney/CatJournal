<div class="container py-5">
  <div class="row-md-12">
    <h4>投稿一覧</h4>
    <table>
      <tr>
        <th>登録日</th>
        <th>タイトル</th>
        <th>ユーザー名</th>
        <th>詳細ページ</th>
      </tr>
      <% @posts.each do |post| %>
      <tr>
        <th><%= post.user.created_at.strftime('%Y/%m/%d') %></th>
        <th><%= post.title %></th>
        <th><%= post.user.name %></th>
        <th><%= link_to "詳細", post_path(post.id) %></th>
      </tr>
      <% end %>
    </table>
  </div>
</div>