<div class="container pt-5 pb-5">
  <div class="row">
    <!--左側のページ-->
    <div class="col-md-2">
      <button type="button" class="btn btn-warning rounded-circle p-0 top-btn", style="width:10rem;height:10rem;">
        <h2>Posts</h2>
      </button>
    </div>
    <!--右側のページ-->
    <div class="col-md-9 offset-md-1 py-4">
      <table class="table">
        <tr>
          <th>登録日</th>
          <th>タイトル</th>
          <th>ユーザー名</th>
          <th>詳細ページ</th>
        </tr>
        <% @posts.each do |post| %>
        <tr>
          <th><%= post.user.created_at.strftime('%Y/%m/%d') %></th>
          <th><%= post.title %></th>
          <th><%= post.user.name %></th>
          <th><%= link_to "詳細", post_path(post.id) %></th>
        </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
