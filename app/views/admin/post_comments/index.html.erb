<div class="container pt-5 pb-5">
  <div class="row">
    <!--左側のページ-->
    <div class="col-md-2">
      <button type="button" class="btn btn-warning rounded-circle p-0 top-btn", style="width:10rem;height:10rem;">
        <h2>Comments</h2>
      </button>
    </div>
    <!--右側のページ-->
    <div class="col-md-9 offset-md-1 py-4">
      <table class="table">
        <tr>
          <th>登録日</th>
          <th>コメント内容</th>
          <th>ユーザー名</th>
          <th>削除</th>
        </tr>
        <% @post_comments.each do |comment| %>
        <tr>
          <td><%= comment.created_at.strftime('%Y/%m/%d') %></td>
          <td style="max-width: 300px;"><%= comment.comment %></td>
          <td><%= comment.user.name %></td>
          <td>
            <%= link_to admin_post_comment_path(comment.id), method: :delete, "data-confirm" => "本当に削除しますか？" do %>
              <i class="fas fa-trash-alt" style="color: #d2040f;"></i>
            <% end %>
          </td>
        </tr>
        <% end %>
      </table>
      <div>
        <%= paginate @post_comments %>
      </div>
    </div>
  </div>
</div>
