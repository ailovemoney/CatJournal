<div>
  <%= flash[:notice] %>
</div>
<div class="container py-5">
  <div class="row">
    <!--左カラム-->
    <div class="col-md-3">
      <h4>>> プロフィール</h4>
      <%= render 'user_profile', user: @user %>

      <!--ゲストログインの場合は非表示-->
      <% if @user.name != "guestuser" %>
      <div>
        <%= link_to "プロフィール編集", edit_user_path(@user.id) %>
      </div>
      <% end %>
      
      <!--いいね一覧へのリンク-->
      <%= link_to "お気に入り記事", favorites_user_path(@user) %>

      <h4>>> クイック投稿</h4>
      <%= render 'public/posts/post_form', post: @post %>
    </div>

    <!--右のページ-->
    <div class="col-md-8 offset-md-1">
      <h4>最近投稿した記事</h4>
      <%= render 'public/posts/post_list', posts: @posts %>
    </div>

  </div>
</div>
