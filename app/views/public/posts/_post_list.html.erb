<table class="table">
  <tr>
    <th>Post Date</th>
    <th>Image</th>
    <th>Title</th>
    
    <th>Like</th>
    <th>comment</th>
  </tr>
  <% posts.each do |post| %>
  <tr>
    <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
    <td><%= image_tag post.get_image(100,100) %></td>
    <td>
      <%= link_to post_path(post.id) do %>
        <%= post.title%>
      <% end %>
    </td>
    
    <td>â™¥<%= post.favorites.count %></td>
    <td class="text-center"><%= post.post_comments.count %></td>
  </tr>
  <% end %>
</table>