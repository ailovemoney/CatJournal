<div class="container py-5">
  <div class="row">
    <!--左カラム-->
    <div class="col-md-3">
      <!--プロフィールの部分テンプレート-->
      <%= render 'public/users/user_profile', user: @users %>


    <!--コメント表示-->
    <div>
      コメント件数 : <%= @post.post_comments.count %>
      <table class="comments_area">
        <%= render 'public/post_comments/comment-list', post: @post %>
      </table>
    </div>

    </div>

    <!--右のページ-->
    <div class="col-md-8 offset-md-1">
      <h4>post詳細ページ</h4>
      <table>
        <tr>
          <td><%= @post.title%></td>
          <td>
            <% if @post.user == current_user %>
              <%= link_to "編集", edit_post_path(@post.id) %>
          </td>
          <td>
              <%= link_to "削除", post_path(@post.id), method: :delete %>
            <% end %>
          </td>
          <!--いいね機能-->
          <td class="favorite-<%= @post.id %>">
            <%= render 'public/favorites/favorite-btn', post: @post %>
          </td>
        </tr>
        <tr>
          <td colspan="4"><%= image_tag @post.get_image(500,500) %></td>
        </tr>
        <tr>
          <td colspan="4"><%= @post.body %></td>
        </tr>
      </table>

      <!--コメント送信フォーム-->
      <div class="new-comment">
        <%= render 'public/post_comments/comment-form', post: @post, post_comment: @post_comment %>
      </div>

    </div>

  </div>
</div>